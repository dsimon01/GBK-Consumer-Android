<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="400dp"
    android:background="@color/colorPrimary"
    android:layout_height="100dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginBottom="2dp"
    android:gravity="start"
    android:id="@+id/recyclerViewBasket">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:scaleType="centerCrop"
        android:id="@+id/basket_image_view_recycler"
        android:contentDescription="@string/desc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/itemNameBasketView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/burger_name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/itemDescriptionBasketView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/burger_desc"
            android:layout_marginTop="2dp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/itemPriceBasket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/price"
            android:gravity="end"
            android:layout_marginRight="20dp"/>

    </LinearLayout>

</LinearLayout>